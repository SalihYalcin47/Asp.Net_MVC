@model profile.Models.viewmodel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<head>
    <title>W3.CSS Template</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
    <style>
        html, body, h1, h2, h3, h4, h5, h6 {
            font-family: "Roboto", sans-serif
        }
    </style>
</head>

    <!-- Page Container -->
    <div class="w3-content w3-margin-top" style="max-width:1400px;">

        <!-- The Grid -->
        <div class="w3-row-padding">

            <!-- Left Column -->
            <div class="w3-third">

                <div class="w3-white w3-text-grey w3-card-4">
                    <div class="w3-display-container">
                        <img src="/IMG_20220923_134144 (2).jpg" style="width: 100%; height: 425px;" alt="Avatar">
                        <div class="w3-display-bottomleft w3-container w3-text-black">
                            <h2 style="color: whitesmoke; font-weight: bolder; font-style: italic;">Mehmet Salih Yalçın</h2>
                        </div>
                    </div>
                    <div class="w3-container" style="padding: 30px;">
                        <p><i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal"></i>Bilgisayar Programcılığı</p>
                        <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal"></i>Mardin, TR</p>
                        <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal"></i>joker16131613@gmail.com</p>
                        <hr>

                        <p class="w3-large"><b><i class="fa fa-asterisk fa-fw w3-margin-right w3-text-teal"></i>Beceriler</b></p>
                        @foreach (var x in Model.yeteneklers)
                        {
                            <p>@x.YetenekAD</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width:@x.DEGER%">@x.DEGER%</div>
                            </div>
                        }
                        <br>

                        <p class="w3-large w3-text-theme"><b><i class="fa fa-globe fa-fw w3-margin-right w3-text-teal"></i>Diller</b></p>
                        @foreach (var y in Model.dillers)
                        {
                            <p>@y.DillAD</p>
                            <div class="w3-light-grey w3-round-xlarge w3-small">
                                <div class="w3-container w3-center w3-round-xlarge w3-teal" style="width: @y.DEGER%">@y.DEGER%</div>
                            </div>
                        }
                        <br>
                    </div>
                </div><br>

                <!-- End Left Column -->
            </div>

            <!-- Right Column -->
            <div class="w3-twothird">

                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i>Tecrübelerim</h2>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Front End Developer</b></h5>
                        <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>Eylül 2022</h6>
                        <p>Orta Düzeyde Denilebilecek Kadar HTML , CSS Ve JavaScript Bilgilerine Sahibim Bionluk Vb Tarzı Sitelerde Çalıştım .</p>
                        <hr>
                    </div>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Web Developer </b></h5>
                        <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>Mart 2022 </h6>
                        <p>Başlangıç Düzeyinde PHP , Asp.Net MVC Ve EntityFrameWork Bilgiye Sahibim Yaklaşık 1 Yıldır Bu Dilleri Öğrenmeye Çalışıyorum .</p>
                        <hr>
                    </div>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Programming </b></h5>
                        <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>Haziran 2022</h6>
                        <p>Temel Düzeyde C++ Ve Orta Düzeyde C# Bilgisine Sahibim Şuan Ağırlıklı Olarak C# Öğrenmeye Çalışıyorum .</p><br>
                    </div>
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Database </b></h5>
                        <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>Haziran 2022</h6>
                        <p>Temel Düzeyde MYSQL Ve MSSQL Bilgisine Sahibim .</p><br>
                    </div>
                </div>
                <div class="w3-container w3-card w3-white w3-margin-bottom">
                    <div class="w3-container">
                        <h5 class="w3-opacity"><b>Diller </b></h5>
                        <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>Mayıs 2022</h6>
                        <p>Kurdçe Ve Turkçe Dillerine Hakimim Ingilizce Dilinde A2 Seviyesindeyim . </p><br>
                    </div>
                </div>

                <!-- End Right Column -->
            </div>

            <!-- End Grid -->
        </div>

        <!-- End Page Container -->
    </div>
