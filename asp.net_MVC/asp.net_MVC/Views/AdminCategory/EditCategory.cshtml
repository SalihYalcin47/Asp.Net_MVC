@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "Kategori_Güncelleme_Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <br />
    <br />
    <h2 class="text-center">Kategori Güncelleme</h2>


    @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
    {
        <div class="form-group">

            @Html.HiddenFor(x => x.CatagoryID, new { @class = "form-control" })


            <h4>@Html.Label("Kategori Adı :")</h4>
            @Html.TextBoxFor(x => x.CatagoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CatagoryName)
            <br /><br />

            <h4>@Html.Label("Kategori Açıklaması : ")</h4>
            @Html.TextAreaFor(x => x.CatagoryDescription, new { @class = "form-control", @rows = "6" })
            @Html.ValidationMessageFor(x => x.CatagoryDescription)
            <br /><br />
            <h4>@Html.Label("Kategori Durumu : ")</h4>
            @Html.TextBoxFor(x => x.CatagoryStatus, new { @class = "form-control" })
            <br /><br />
                  <button class="btn btn-success w-100">Kategoriyi Güncelle</button>
        </div>
    }