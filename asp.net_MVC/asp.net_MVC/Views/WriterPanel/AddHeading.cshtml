@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2 class="text-center">Başlık Ekleme Ekranı</h2>
<br />
@using (Html.BeginForm("AddHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br /><br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CatagoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-success w-100">Başlığı Oluştur</button>
    </div>
}

