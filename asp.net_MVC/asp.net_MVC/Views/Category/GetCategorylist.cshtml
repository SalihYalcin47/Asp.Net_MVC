
@{
    ViewBag.Title = "GetCategorylist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetCategorylist</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2 class="text-center">Kategory Tablosu</h2>
        <br />
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Adı</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CatagoryID</td>
                    <td>@item.CatagoryName</td>
                    <td>@item.CatagoryDescription</td>
                    <td>@item.CatagoryStatus</td>
                    <td><button class="btn btn-primary">Güncelle</button></td>
                </tr>
            }
        </table>
        <a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a>
    </div>
</body>
</html>
