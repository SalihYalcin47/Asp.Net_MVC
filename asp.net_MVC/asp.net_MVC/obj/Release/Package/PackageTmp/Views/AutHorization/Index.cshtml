@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <h2 class="text-center">Kategory Tablosu</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Pasif Yap</th>
            <th>Yetkisini Değiştir</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AdminID</th>
                <td>@item.AdminUserName</td>
                <td>@item.AdminRol</td>
                <td><a href="/AutHorization/UpdateAdmin/@item.AdminID" class="btn btn-danger">Pasif Yap</a></td>
                <td><a href="/AutHorization/EditAdmin/@item.AdminID" class="btn btn-success">Admini Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/AutHorization/AddAdmin/" class="btn btn-success">Yeni Admin Ekle</a>
</div>

