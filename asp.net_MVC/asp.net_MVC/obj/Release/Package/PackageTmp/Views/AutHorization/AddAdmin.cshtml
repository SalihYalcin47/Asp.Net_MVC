@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2 style="text-align:center">Admin Ekleme</h2>
<br />
@using (Html.BeginForm("AddAdmin", "AutHorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin Kullanıcı Adı : ")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })

        <br /><br />
        @Html.Label("Şifreyi Giriniz : ")
        @Html.TextBoxFor(x => x.Adminpassword, new { @class = "form-control", @rows = "6" })
        <!-- Html.ValidationMessageFor(x => x.CatagoryName) -->
        <br /><br />
        @Html.Label("Rolü Giriniz : ")
        @Html.TextBoxFor(x => x.AdminRol, new { @class = "form-control" })
        <!-- Html.ValidationMessageFor(x => x.CatagoryName) -->
        <br /><br />
        <button class="btn btn-success">Admin'i Ekle</button>
    </div>
}
